---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Jose Poveda | Full Stack Developer & FiveM Expert",
  description = "Especialista en desarrollo de servidores FiveM con 6 a침os de experiencia. Experto en React, TypeScript, Lua y arquitecturas escalables para servidores de alto rendimiento.",
  image = "/og-image.png" // Asumiendo que existe o se crear치
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Primario -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content="Jose Poveda, Desarrollador Full Stack, FiveM Developer, Lua Scripting, React Developer, TypeScript, Videojuegos, Programaci칩n, Valencia, Espa침a" />
    <meta name="author" content="Jose Poveda" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Fira+Code:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Tema -->
    <meta name="theme-color" content="#8b5cf6" />
  </head>
  <body class="bg-[#030014] text-gray-100 antialiased selection:bg-primary-500/30 selection:text-primary-200">
    <div class="fixed inset-0 bg-grid z-0 opacity-20 pointer-events-none"></div>
    <div class="relative z-10">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --accent: 139, 92, 246;
    --accent-light: 221, 214, 254;
    --accent-dark: 76, 29, 149;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
</style>
